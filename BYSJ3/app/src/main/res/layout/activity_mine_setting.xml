<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:id="@+id/rl_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <Button
            android:id="@+id/bt_mine_setting_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/fanhui"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_mine_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >
        <TextView
            android:id="@+id/tv_mine_setting_top_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F0F1F5"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mine_setting_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="账号："
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />
    <TextView
        android:id="@+id/tv_mine_setting_account_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="请登录"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        />
</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/tv_mine_setting_account_safe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="账号与安全"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F0F1F5"/>
        <TextView
            android:id="@+id/tv_mine_setting_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="检查更新"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#707070"/>
        <TextView
            android:id="@+id/tv_mine_setting_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="关于一鹭"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#F0F1F5"/>
        <TextView
            android:id="@+id/tv_mine_setting_sign_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="退出当前账号"
            android:textColor="#60B4E8"
            android:gravity="center"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#707070"/>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>