<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_adapter_raiders_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/tv_adapter_raiders_title"
        android:layout_width="212.5dp"
        android:layout_height="42.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"

        android:textColor="#000000"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_adapter_raiders_address"
        android:layout_width="133.5dp"
        android:layout_height="18.5dp"
        android:layout_marginLeft="16dp"
        android:textColor="#979797"
        android:textSize="14sp"
        android:layout_below="@+id/tv_adapter_raiders_title"
        />
    <ImageView
        android:id="@+id/iv_adapter_raiders_user_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="1.5dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_below="@+id/tv_adapter_raiders_address"
        />
    <TextView
        android:id="@+id/tv_adapter_raiders_user"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="3.5dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textColor="#979797"
        android:textSize="10sp"
        android:layout_below="@+id/tv_adapter_raiders_address"
        />

</RelativeLayout>